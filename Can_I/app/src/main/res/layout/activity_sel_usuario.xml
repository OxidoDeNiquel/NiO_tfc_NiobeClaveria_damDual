<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usecases.admin_menu.admin_articulos.sel_articulo.SelArticuloActivity"
    android:orientation="vertical"
    android:background="@color/can_i_c0026">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:backgroundTint="@color/can_i_c0026">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/baseline_arrow_back_24"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="50dp">


        <LinearLayout
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/igIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground" />
            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Usuario"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="32sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvPuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puesto: "
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="21sp"
                android:text="Email: "/>
            <TextView
                android:id="@+id/tvDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:textSize="21sp"
                android:text="DNI: "/>

            <Button
                android:id="@+id/bEditarUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Editar usuario"
                android:backgroundTint="@color/can_i_c0026"/>

            <Button
                android:id="@+id/bBorrarUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Borrar usuario"
                android:backgroundTint="@color/can_i_c0027"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>