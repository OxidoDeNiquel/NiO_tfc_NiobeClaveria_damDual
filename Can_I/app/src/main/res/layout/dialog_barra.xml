<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvBarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barra X"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>



            <Button
                android:id="@+id/bBorrarBarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/borrar_barra"
                android:textColor="@color/white"
                android:backgroundTint="@color/can_i_c0027"/>

            <Button
                android:id="@+id/bCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancelar"
                android:textColor="@color/white"
                android:backgroundTint="@color/can_i_c0026"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>